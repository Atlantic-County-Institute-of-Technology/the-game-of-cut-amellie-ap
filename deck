import java.util.Random;

public class deck {
    Random random = new Random();

    // Creates the deck array.
    private card[] deck;

    public deck(){
        deck = new card[52];}

    // Populates the deck by looping around each index of the suit and face arrays in card.java.
    public void populateDeck() {
        int index = 0;
        for (int suit = 1; suit <= 4; suit++) {
            for (int face = 1; face <= 13; face++) {
                deck[index] = new card(face, suit);
                index++; }}}

    // Simply clears the deck by exchanging the existing values to null values.
    public void clearDeck() {
        for (int i = 0; i < deck.length; i++) {
            deck[i] = null; }}


    // Shuffles the deck by swapping the int values of the deck from i to a random integer. Following the logic of a
    // bubble sort.
    public void shuffleDeck() {
        for (int i = 0; i < deck.length; i++) {
            card temp = deck[i];
            int a = random.nextInt(52);
            deck[i] = deck[a];
            deck[a] = temp; }}


    // Returns the selected card and its values by using target. Used to show the user their card.
    public card selectCard(int target) {
        return deck[target - 1]; }

    // Loops through the deck uses the toString to show the deck's values.
    public String showDeck() {
        String result = "";
        for (int i=0; i < deck.length; i++) {
            result += deck[i].toString() + "\n";
        }
        return result; }
}







